@model MeetingApp.Models.UserInfo
@{
    ViewBag.Title = "Başvuru Formu";
}

<h1 class="h4 text-center">Toplantı Katılım Formu</h1>

<form method="post" action="/Meeting/Apply" novalidate>
     <div asp-validation-summary="All" ></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"> <i class="fas fa-user"></i> Ad Soyad</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label"> <i class="fas fa-phone"></i> Telefon</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"> <i class="fas fa-envelope"></i> Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label"> <i class="fas fa-calendar-check"></i> Katılım Durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Evet, katılıyorum</option>
            <option value="false">Hayır, katılmıyorum</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
